# rsync with CVS excludes and remote deletes
#
# Usage:
#   rs -ai source destination

rsync --no-o --no-g --delete -e'ssh -q' \
      -f".- $HOME/.gitignore"           \
      -f':- .gitignore'                 \
      -f'- .gitignore'                  \
      -f'- .git'                        \
      -f':- .hgignore'                  \
      -f'- .hgignore'                   \
      -f'- .hg'                         \
      -f'- .svn'                        \
      $@
