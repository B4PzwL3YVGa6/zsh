# rsync with CVS excludes and remote deletes
#
# Usage:
#   rs -ai source destination

rsync --no-o --no-g --delete-after -e'ssh -q' \
      -f".- $HOME/.gitignore"                 \
      -f':- .gitignore'                       \
      -f':- .hgignore'                        \
      -f'- .git'                              \
      -f'- .hg'                               \
      -f'- .svn'                              \
      $@
