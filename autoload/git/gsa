(
# Don't update my cd bookmarks for automated cds
chpwd_functions=()

for repo in $REPOS_BASE/*(/)
do
   if cd $repo
   then
      if [[ -n $(git status --porcelain) ]] || git status -sb | grep -qE ']$'
      then
         print -nP "%F{45}${repo:t}%f: "
         git status -sb
      fi
   fi
done
)
