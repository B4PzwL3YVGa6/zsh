# Fuzzy cd under the current directory, including dot folders
# usage fd [pattern]

local dir

if (($#))
then
   dir=$(printf '%s\0' (^.(git|svn|hg)/)#*${(j.*.)@}*(/D) | fzf --read0 -0 -1 +m)
else
   dir=$(printf '%s\0' (^.(git|svn|hg)/)#^.(git|svn|hg)(/D) | fzf --read0 -0 -1 +m)
fi

[[ -d $dir ]] && cd -- $dir
